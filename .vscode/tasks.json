{
    "version": "2.0.0",
    "tasks": [
        {
            "type": "shell",
            "label": "Build x64 Release",
            "command": "cl.exe",
            "args": [
                "/Zi",
                "/EHsc",
                "/Fe:",
                "${workspaceFolder}\\build\\UYALauncher.exe",
                "/I",
                "${workspaceFolder}",
                "/D",
                "UNICODE",
                "/D",
                "_UNICODE",
                "${workspaceFolder}\\*.cpp",
                "/link",
                "/SUBSYSTEM:WINDOWS",
                "/MACHINE:X64",
                "user32.lib",
                "gdi32.lib",
                "shell32.lib",
                "ole32.lib",
                "wininet.lib",
                "comctl32.lib",
                "winhttp.lib",
                "urlmon.lib",
                "Shlwapi.lib"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": [
                "$msCompile"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "type": "shell",
            "label": "Build x64 Debug",
            "command": "cl.exe",
            "args": [
                "/Zi",
                "/EHsc",
                "/Od",
                "/D",
                "_DEBUG",
                "/Fe:",
                "${workspaceFolder}\\build\\UYALauncher.exe",
                "/I",
                "${workspaceFolder}",
                "/D",
                "UNICODE",
                "/D",
                "_UNICODE",
                "${workspaceFolder}\\*.cpp",
                "/link",
                "/SUBSYSTEM:WINDOWS",
                "/MACHINE:X64",
                "/DEBUG",
                "user32.lib",
                "gdi32.lib",
                "shell32.lib",
                "ole32.lib",
                "wininet.lib",
                "comctl32.lib",
                "winhttp.lib",
                "urlmon.lib",
                "Shlwapi.lib"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": [
                "$msCompile"
            ],
            "group": "build"
        },
        {
            "type": "shell",
            "label": "Clean Build",
            "command": "Remove-Item",
            "args": [
                "-Path",
                "${workspaceFolder}\\build\\*",
                "-Force",
                "-Recurse",
                "-ErrorAction",
                "SilentlyContinue"
            ],
            "options": {
                "shell": {
                    "executable": "powershell.exe"
                }
            },
            "group": "build"
        }
    ]
}