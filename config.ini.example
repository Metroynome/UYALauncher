[Settings]
; Path to PCSX2 executable (can be anywhere)
PCSX2Path=

; Default ISO to launch automatically
DefaultISO=

; Show debug console window (true/false)
ShowConsole=false

; Custom Maps Region (NTSC, PAL, or Both)
MapRegion=NTSC

; Embed PCSX2 window inside launcher (true/false)
; If false, launcher closes after starting PCSX2
EmbedWindow=true

[Hotkeys]
; Format: Modifier+Key
; Modifiers: CTRL, ALT, SHIFT, WIN
; Note: These are examples - actual implementation requires code changes
RestartHotkey=CTRL+ALT+R
SaveStateHotkey=CTRL+ALT+S
LoadStateHotkey=CTRL+ALT+L
ScreenshotHotkey=CTRL+ALT+P
ChangeISOHotkey=CTRL+ALT+I
ExitHotkey=CTRL+ALT+Q

[PreLaunch]
; Tasks to run before launching PCSX2
; (Implementation required in PreLaunchSetup function)
BackupSaves=false
CheckUpdates=false
CustomConfigPath=

[PostShutdown]
; Tasks to run after PCSX2 closes
; (Implementation required in PostShutdownCleanup function)
BackupSaves=false
CleanTempFiles=false
