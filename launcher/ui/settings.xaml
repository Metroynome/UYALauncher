<Window x:Class="UYALauncher.SettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:UYALauncher"
        xmlns:nav="clr-namespace:System.Windows.Navigation;assembly=PresentationFramework"
        Title="UYA Launcher - Settings" 
        Height="600" 
        Width="600"
        WindowStartupLocation="CenterScreen"
        ResizeMode="CanMinimize">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <TextBlock Grid.Row="0" 
                   Text="UYA Launcher Settings" 
                   FontSize="24" 
                   FontWeight="Bold"
                   Margin="0,0,0,20"/>

        <!-- Tab Control -->
        <TabControl Grid.Row="1" 
                    x:Name="SettingsTabs"
                    Padding="10">

            <!-- General Tab -->
            <TabItem Header="General">
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <StackPanel Margin="15">
                        <!-- ISO Path -->
                        <Grid Margin="0,0,0,20">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>   <!-- Label -->
                                <ColumnDefinition Width="*"/>      <!-- TextBox -->
                                <ColumnDefinition Width="Auto"/>   <!-- Button -->
                            </Grid.ColumnDefinitions>

                            <TextBlock Text="Game ISO File:" 
                                    Style="{StaticResource Label}"
                                    VerticalAlignment="Center"
                                    Margin="0,0,10,0"
                                    Grid.Column="0"/>

                            <TextBox x:Name="IsoPathTextBox"
                                    Grid.Column="1"
                                    Style="{StaticResource ModernTextBox}"
                                    IsReadOnly="True"
                                    Margin="0,0,10,0"/>

                            <Button x:Name="BrowseIsoButton"
                                    Grid.Column="2"
                                    Content="Browse"
                                    Style="{StaticResource PrimarySmallButton}"
                                    Click="BrowseIso_Click"
                                    MinWidth="100"/>
                        </Grid>

                        <!-- PS2 BIOS -->
                        <Grid Margin="0,0,0,20">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>   <!-- Label -->
                                <ColumnDefinition Width="*"/>      <!-- TextBox -->
                                <ColumnDefinition Width="Auto"/>   <!-- Button -->
                            </Grid.ColumnDefinitions>

                            <TextBlock Text="PS2 BIOS File:" 
                                    Style="{StaticResource Label}"
                                    VerticalAlignment="Center"
                                    Margin="0,0,10,0"
                                    Grid.Column="0"/>

                            <TextBox x:Name="BiosPathTextBox" 
                                     Grid.Column="1" 
                                     Style="{StaticResource ModernTextBox}"
                                     IsReadOnly="True"
                                     Margin="0,0,10,0"/>

                            <Button x:Name="BrowseBiosButton" 
                                    Grid.Column="2" 
                                    Content="Browse" 
                                    Style="{StaticResource PrimarySmallButton}"
                                    Click="BrowseBios_Click"
                                    MinWidth="100"/>
                        </Grid>

                        <!-- Region -->
                        <Grid Margin="0,0,0,20">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>   <!-- Label -->
                                <ColumnDefinition Width="*"/>      <!-- ComboBox -->
                            </Grid.ColumnDefinitions>

                            <TextBlock Text="Region:" 
                                    Style="{StaticResource Label}"
                                    VerticalAlignment="Center"
                                    Margin="0,0,10,0"
                                    Grid.Column="0"/>

                            <ComboBox x:Name="RegionComboBox"
                                    Grid.Column="1"
                                    Style="{StaticResource ModernComboBox}"
                                    VerticalAlignment="Center"
                                    HorizontalAlignment="Right"
                                    MinWidth="400">
                                <ComboBoxItem Content="NTSC-U (North America)" IsSelected="True"/>
                                <ComboBoxItem Content="PAL (Europe)"/>
                            </ComboBox>
                        </Grid>

                        <!-- Auto Update -->
                        <CheckBox x:Name="AutoUpdateCheckBox" 
                                  Content="Auto Update Launcher" 
                                  Style="{StaticResource ModernCheckBox}"
                                  IsChecked="True"
                                  Margin="0,0,0,10"/>

                        <!-- Fullscreen -->
                        <CheckBox x:Name="FullscreenCheckBox" 
                                  Content="Start in Fullscreen" 
                                  Style="{StaticResource ModernCheckBox}"
                                  IsChecked="True"
                                  Margin="0,0,0,10"/>
                    </StackPanel>
                </ScrollViewer>
            </TabItem>

            <!-- Patches Tab -->
            <TabItem Header="Patches">
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <StackPanel Margin="15">

                        <TextBlock Text="Game Patches" 
                                Style="{StaticResource SectionHeader}"
                                Margin="0,0,0,15"/>

                        <Grid Margin="0,0,0,15">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <CheckBox x:Name="BootToMultiplayerCheckBox"
                                    Content="Boot to Multiplayer"
                                    Style="{StaticResource ModernCheckBox}"
                                    IsChecked="True"/>
                        </Grid>

                        <Grid Margin="0,0,0,15">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <CheckBox x:Name="WidescreenCheckBox"
                                    Content="Enable Widescreen"
                                    Style="{StaticResource ModernCheckBox}"
                                    IsChecked="True"/>
                        </Grid>

                    </StackPanel>
                </ScrollViewer>
            </TabItem>

            <!-- Advanced Tab -->
            <TabItem Header="Advanced">
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <StackPanel Margin="15">
                        <TextBlock Text="Advanced Settings" 
                                   Style="{StaticResource SectionHeader}"/>

                        <CheckBox x:Name="EmbedWindowCheckBox" 
                                  Content="Embed PCSX2 in Launcher Window" 
                                  Style="{StaticResource ModernCheckBox}"
                                  IsChecked="True"
                                  Margin="0,0,0,15"/>

                        <CheckBox x:Name="ShowConsoleCheckBox" 
                                  Content="Show Debug Console" 
                                  Style="{StaticResource ModernCheckBox}"
                                  Margin="0,0,0,15"/>

                        <!-- <TextBlock Text="Debug console is useful for troubleshooting issues."
                                   FontSize="12"
                                   Foreground="{StaticResource TextSecondaryBrush}"
                                   TextWrapping="Wrap"
                                   Margin="0,20,0,0"/> -->
                    </StackPanel>
                </ScrollViewer>
            </TabItem>

            <!-- About Tab -->
            <TabItem Header="About">
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <StackPanel Margin="15">

                        <!-- Title -->
                        <TextBlock Text="About UYA Launcher"
                                Style="{StaticResource SectionHeader}"
                                Margin="0,0,0,10"/>

                        <!-- Description -->
                        <TextBlock Text="UYA Launcher is a modern launcher and patch manager designed to streamline the PCSX2 experience for Ratchet: Deadlocked (UYA)."
                                TextWrapping="Wrap"
                                Foreground="{StaticResource TextBrush}"
                                Margin="0,0,0,15"/>

                        <TextBlock Text="Features include automatic patching, embedded emulator support, quality-of-life improvements, and future update support."
                                TextWrapping="Wrap"
                                Foreground="{StaticResource TextBrush}"
                                Margin="0,0,0,20"/>

                        <!-- Keyboard Shortcuts -->
                        <TextBlock Text="Keyboard Shortcuts"
                                Style="{StaticResource SectionHeader}"
                                Margin="0,0,0,10"/>

                        <StackPanel Margin="0,0,0,20">

                            <Grid Margin="0,5,0,5">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="150"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>

                                <TextBlock Text="F11"
                                        FontWeight="SemiBold"/>
                                <TextBlock Grid.Column="1"
                                        Text="Check / Download new Custom Maps"
                                        TextWrapping="Wrap"/>
                            </Grid>

                            <Grid Margin="0,5,0,5">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="150"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>

                                <TextBlock Text="Ctrl + F11"
                                        FontWeight="SemiBold"/>
                                <TextBlock Grid.Column="1"
                                        Text="Open Settings Window"
                                        TextWrapping="Wrap"/>
                            </Grid>

                        </StackPanel>

                        <!-- Community Links -->
                        <TextBlock Text="Community and Resources"
                                Style="{StaticResource SectionHeader}"
                                Margin="0,0,0,10"/>

                        <StackPanel Margin="0,0,0,20">

                            <!-- GitHub -->
                            <TextBlock Margin="0,5,0,5">
                                <Run Text="GitHub: "/>
                                <Hyperlink NavigateUri="https://github.com/metroynome/uyalauncher"
                                        RequestNavigate="Hyperlink_RequestNavigate">
                                    https://github.com/metroynome/uyalauncher
                                </Hyperlink>
                            </TextBlock>

                            <!-- Discord -->
                            <TextBlock Margin="0,5,0,5">
                                <Run Text="Discord: "/>
                                <Hyperlink NavigateUri="https://discord.gg/4UHSnNfX"
                                        RequestNavigate="Hyperlink_RequestNavigate">
                                    Join the Community Server
                                </Hyperlink>
                            </TextBlock>

                            <!-- YouTube -->
                            <TextBlock Margin="0,5,0,5">
                                <Run Text="YouTube: "/>
                                <Hyperlink NavigateUri="https://www.youtube.com/@HorizonPrivateServer"
                                        RequestNavigate="Hyperlink_RequestNavigate">
                                    Horizon Private Server
                                </Hyperlink>
                            </TextBlock>

                        </StackPanel>

                        <!-- Credits -->
                        <TextBlock Text="Created by Troy"
                                FontWeight="SemiBold"
                                Margin="0,10,0,5"/>

                        <TextBlock Text="This project is community-driven and not affiliated with Sony Interactive Entertainment."
                                TextWrapping="Wrap"
                                FontSize="12"
                                Foreground="{StaticResource TextSecondaryBrush}"
                                Margin="0,0,0,10"/>

                        <TextBlock Text="Licensed under the MIT License."
                                FontSize="12"
                                Foreground="{StaticResource TextSecondaryBrush}"
                                Margin="0,0,0,5"/>

                        <TextBlock Text="&#169; 2026 Metroynome"
                                FontSize="12"
                                Foreground="{StaticResource TextSecondaryBrush}"
                                Margin="0,0,0,5"/>

                    </StackPanel>
                </ScrollViewer>
            </TabItem>
        </TabControl>

        <!-- Buttons -->
        <Grid Grid.Row="2" Margin="0,20,0,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            
            <!-- Version on the left -->
            <StackPanel Grid.Column="0" 
                        Orientation="Horizontal" 
                        VerticalAlignment="Center">
                <TextBlock Text="Version: " 
                           FontSize="12" 
                           Foreground="{StaticResource TextSecondaryBrush}"/>
                <TextBlock x:Name="VersionTextBlock" 
                           Text="-.-.-" 
                           FontSize="12" 
                           Foreground="{StaticResource TextSecondaryBrush}"/>
            </StackPanel>
            
            <!-- Buttons on the right -->
            <StackPanel Grid.Column="1" 
                        Orientation="Horizontal" 
                        HorizontalAlignment="Right">
                <Button x:Name="CheckUpdatesButton"
                        Content="Check for Updates"
                        Style="{StaticResource SecondaryButton}"
                        Click="CheckUpdates_Click"
                        MinWidth="150"
                        Margin="0,0,10,0"
                        Visibility="Collapsed"/>
                <Button x:Name="SaveButton"
                        Content="Save"
                        Style="{StaticResource SecondaryButton}"
                        Click="Save_Click"
                        MinWidth="100"
                        Margin="0,0,10,0"
                        Visibility="Collapsed"/>
                <Button x:Name="SaveAndRelaunchButton"
                        Content="Save &amp; Relaunch"
                        Style="{StaticResource SecondaryButton}"
                        Click="SaveAndRelaunch_Click"
                        MinWidth="150"
                        Margin="0,0,10,0"
                        Visibility="Collapsed"/>
                <Button x:Name="LaunchButton"
                        Content="Launch"
                        Style="{StaticResource PrimaryButton}"
                        Click="Launch_Click"
                        MinWidth="120"
                        IsEnabled="False"/>
            </StackPanel>
        </Grid>
    </Grid>
</Window>
