<Window x:Class="UYALauncher.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:UYALauncher"
        Title="UYA Launcher - Settings" 
        Height="600" 
        Width="700"
        WindowStartupLocation="CenterScreen"
        ResizeMode="CanMinimize">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <TextBlock Grid.Row="0" 
                   Text="UYA Launcher Configuration" 
                   FontSize="24" 
                   FontWeight="Bold"
                   Margin="0,0,0,20"/>

        <!-- Tab Control -->
        <TabControl Grid.Row="1" 
                    x:Name="SettingsTabs"
                    Padding="10">

            <!-- General Tab -->
            <TabItem Header="General">
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <StackPanel Margin="15">
                        <!-- ISO Path -->
                        <TextBlock Text="UYA ISO File:" Style="{StaticResource Label}"/>
                        <Grid Margin="0,0,0,20">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <TextBox x:Name="IsoPathTextBox" 
                                     Grid.Column="0" 
                                     Style="{StaticResource ModernTextBox}"
                                     IsReadOnly="True"
                                     Margin="0,0,10,0"/>
                            <Button x:Name="BrowseIsoButton" 
                                    Grid.Column="1" 
                                    Content="Browse" 
                                    Style="{StaticResource SecondaryButton}"
                                    Click="BrowseIso_Click"
                                    MinWidth="100"/>
                        </Grid>

                        <!-- PCSX2 Path -->
                        <TextBlock Text="PCSX2 Executable:" Style="{StaticResource Label}"/>
                        <Grid Margin="0,0,0,20">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <TextBox x:Name="Pcsx2PathTextBox" 
                                     Grid.Column="0" 
                                     Style="{StaticResource ModernTextBox}"
                                     IsReadOnly="True"
                                     Margin="0,0,10,0"/>
                            <Button x:Name="BrowsePcsx2Button" 
                                    Grid.Column="1" 
                                    Content="Browse" 
                                    Style="{StaticResource SecondaryButton}"
                                    Click="BrowsePcsx2_Click"
                                    MinWidth="100"/>
                        </Grid>

                        <!-- Region -->
                        <TextBlock Text="Region:" Style="{StaticResource Label}"/>
                        <ComboBox x:Name="RegionComboBox" 
                                  Style="{StaticResource ModernComboBox}"
                                  Margin="0,0,0,20">
                            <ComboBoxItem Content="NTSC" IsSelected="True"/>
                            <ComboBoxItem Content="PAL"/>
                        </ComboBox>

                        <!-- Auto Update -->
                        <CheckBox x:Name="AutoUpdateCheckBox" 
                                  Content="Auto Update Launcher" 
                                  Style="{StaticResource ModernCheckBox}"
                                  IsChecked="True"
                                  Margin="0,0,0,10"/>

                        <!-- Fullscreen -->
                        <CheckBox x:Name="FullscreenCheckBox" 
                                  Content="Start in Fullscreen" 
                                  Style="{StaticResource ModernCheckBox}"
                                  IsChecked="True"
                                  Margin="0,0,0,10"/>
                    </StackPanel>
                </ScrollViewer>
            </TabItem>

            <!-- Patches Tab -->
            <TabItem Header="Patches">
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <StackPanel Margin="15">
                        <TextBlock Text="Game Patches" 
                                   Style="{StaticResource SectionHeader}"/>

                        <CheckBox x:Name="BootToMultiplayerCheckBox" 
                                  Content="Boot to Multiplayer" 
                                  Style="{StaticResource ModernCheckBox}"
                                  IsChecked="True"
                                  Margin="0,0,0,15"/>

                        <CheckBox x:Name="WidescreenCheckBox" 
                                  Content="Enable Widescreen" 
                                  Style="{StaticResource ModernCheckBox}"
                                  IsChecked="True"
                                  Margin="0,0,0,15"/>

                        <CheckBox x:Name="ProgressiveScanCheckBox" 
                                  Content="Enable Progressive Scan" 
                                  Style="{StaticResource ModernCheckBox}"
                                  IsChecked="True"
                                  Margin="0,0,0,15"/>

                        <TextBlock Text="Note: These patches will be applied to PCSX2's patch files."
                                   FontSize="12"
                                   Foreground="{StaticResource TextSecondaryBrush}"
                                   TextWrapping="Wrap"
                                   Margin="0,20,0,0"/>
                    </StackPanel>
                </ScrollViewer>
            </TabItem>

            <!-- Advanced Tab -->
            <TabItem Header="Advanced">
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <StackPanel Margin="15">
                        <TextBlock Text="Advanced Settings" 
                                   Style="{StaticResource SectionHeader}"/>

                        <CheckBox x:Name="EmbedWindowCheckBox" 
                                  Content="Embed PCSX2 in Launcher Window" 
                                  Style="{StaticResource ModernCheckBox}"
                                  IsChecked="True"
                                  Margin="0,0,0,15"/>

                        <CheckBox x:Name="ShowConsoleCheckBox" 
                                  Content="Show Debug Console" 
                                  Style="{StaticResource ModernCheckBox}"
                                  Margin="0,0,0,15"/>

                        <TextBlock Text="Debug console is useful for troubleshooting issues."
                                   FontSize="12"
                                   Foreground="{StaticResource TextSecondaryBrush}"
                                   TextWrapping="Wrap"
                                   Margin="0,20,0,0"/>
                    </StackPanel>
                </ScrollViewer>
            </TabItem>
        </TabControl>

        <!-- Buttons -->
        <Grid Grid.Row="2" Margin="0,20,0,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            
            <!-- Version on the left -->
            <StackPanel Grid.Column="0" 
                        Orientation="Horizontal" 
                        VerticalAlignment="Center">
                <TextBlock Text="Version: " 
                           FontSize="12" 
                           Foreground="{StaticResource TextSecondaryBrush}"/>
                <TextBlock x:Name="VersionTextBlock" 
                           Text="3.0.0" 
                           FontSize="12" 
                           Foreground="{StaticResource TextSecondaryBrush}"/>
            </StackPanel>
            
            <!-- Buttons on the right -->
            <StackPanel Grid.Column="1" 
                        Orientation="Horizontal" 
                        HorizontalAlignment="Right">
                <Button x:Name="CheckUpdatesButton"
                        Content="Check for Updates"
                        Style="{StaticResource SecondaryButton}"
                        Click="CheckUpdates_Click"
                        MinWidth="150"
                        Margin="0,0,10,0"
                        Visibility="Collapsed"/>
                <Button x:Name="SaveButton"
                        Content="Save"
                        Style="{StaticResource SecondaryButton}"
                        Click="Save_Click"
                        MinWidth="100"
                        Margin="0,0,10,0"
                        Visibility="Collapsed"/>
                <Button x:Name="SaveAndRelaunchButton"
                        Content="Save &amp; Relaunch"
                        Style="{StaticResource SecondaryButton}"
                        Click="SaveAndRelaunch_Click"
                        MinWidth="150"
                        Margin="0,0,10,0"
                        Visibility="Collapsed"/>
                <Button x:Name="LaunchButton"
                        Content="Launch"
                        Style="{StaticResource ModernButton}"
                        Click="Launch_Click"
                        MinWidth="120"
                        IsEnabled="False"/>
            </StackPanel>
        </Grid>
    </Grid>
</Window>
