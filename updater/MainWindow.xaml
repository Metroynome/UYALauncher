<Window x:Class="UYALauncherUpdater.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="UYA Launcher - Updating..." 
        Height="250" 
        Width="500"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        Background="#202020"
        WindowStyle="None"
        AllowsTransparency="True">
    
    <Border BorderBrush="#0078D4" BorderThickness="1">
        <Grid Margin="30">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="20"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="20"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Title -->
            <TextBlock Grid.Row="0" 
                       Text="Updating UYA Launcher" 
                       FontSize="20" 
                       FontWeight="Bold"
                       Foreground="White"
                       HorizontalAlignment="Center"/>

            <!-- Status Text -->
            <TextBlock x:Name="StatusText"
                       Grid.Row="2"
                       Text="Preparing update..."
                       FontSize="14"
                       Foreground="#CCCCCC"
                       HorizontalAlignment="Center"/>

            <!-- Progress Bar -->
            <ProgressBar x:Name="ProgressBar"
                         Grid.Row="4"
                         Height="24"
                         Background="#2D2D2D"
                         Foreground="#0078D4"
                         BorderBrush="#3D3D3D"
                         Minimum="0"
                         Maximum="100"
                         Value="0"/>
        </Grid>
    </Border>
</Window>
